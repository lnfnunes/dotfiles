[user]
	name = Leandro Nunes
	email = dr1design@gmail.com

[core]
	editor = vim

[color]
	ui = true

[credential]
	helper = cache --timeout=129600

[alias]
	co = checkout
	br = branch
	ci = commit
	cia = commit --amend
	ciaa = commit --amend -C HEAD
	st = status
	pullo = pull origin
	pullu = pull upstream master
	pusho = push origin
	pushon = push origin --no-verify
	diff = diff --word-diff
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	la = "!git config -l | grep alias | cut -c 7-"	
	unstage = reset HEAD --
	last = log -1 HEAD
	prmerge = "!sh -c \"git fetch origin pull/$1/head:$1 && git checkout $1\" -"
	lgraph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	lgraph2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

[mergetool "p4merge"]
	cmd = /Applications/p4merge.app/Contents/MacOS/p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
	keepTemporaries = false
	trustExitCode = false
	keepBackup = false

[merge]
	tool = p4merge
